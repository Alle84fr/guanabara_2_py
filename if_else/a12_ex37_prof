num = int(input("Numero: "))
print("""Ecolha
      [1] Binários
      [2] Octal
      [3] Hexadecimal""")
opcao = int(input("opção: "))

if opcao == 1:
    print(f"O valor {num} em Binário é {num:b}")
elif opcao == 2:
    print(f"O valor {num} em Octal é {oct(num)}")
elif opcao == 3:
    print(f"O valor {num} em Hexadecimal é {hex(num)}")
else:
    print("Opção inválida")
    
